<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- TODO = modify and expand the range of menus available from the menu menu, and develop game modes you can select when starting a new game -->
<!-- vertically stacked label and button -->

<AnchorPane style="-fx-background-color: #d3dba0;" xmlns="http://javafx.com/javafx/11.0.4" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" prefHeight="606.0" prefWidth="480.0" spacing="20.0">
         <children>
            <Label contentDisplay="BOTTOM" text="LOOP MANIA">
               <font>
                  <Font size="50.0" />
               </font>
            </Label>
            <!-- clicking button should start/resume the game -->
            <Button fx:id="standardGameButton" onAction="#switchToStandard" style="-fx-background-color: #cc4d3f;" text="Standard" textFill="#fcfcfc">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="survivalGameButton" onAction="#switchToSurvival" style="-fx-background-color: #cc4d3f;" text="Survival" textFill="#fcfcfc">
               <font>
                  <Font size="22.0" />
               </font>
            </Button>
            <Button fx:id="berserkerGameButton" onAction="#switchToBerserker" style="-fx-background-color: #cc4d3f;" text="Berserker" textFill="#fcfcfc">
               <font>
                  <Font size="28.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
